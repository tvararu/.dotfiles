[commit]
  gpgsign = false
[core]
  excludesfile = ~/.gitignore.global
  editor = nvim
  pager = delta
[gpg]
  program = gpg
[init]
  defaultBranch = main
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true  # use n and N to move between diff sections
  line-numbers = true
  light = true
[merge]
  conflictstyle = diff3
[diff]
  colorMoved = default
